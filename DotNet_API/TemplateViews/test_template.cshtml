@using DotNet_API.DtoModels
@model InvoiceDto

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background-color: #f9f9f9;
            margin: 0;
            padding: 2rem;
        }

        .invoice {
            background: #fff;
            max-width: 800px;
            margin: auto;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start; /* Align items to the top */
            border-bottom: 2px solid #eee;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }

            .header .logo-container {
                width: 100px; /* Fixed width for logo container */
                text-align: left;
            }

            .header img {
                max-height: 80px;
                max-width: 100%; /* Ensure the logo fits within the container */
            }

            .header h1 {
                font-size: 2rem;
                color: #2c3e50;
                margin: 0;
            }

            .header .invoice-info {
                text-align: right;
                flex-grow: 1; /* Allow this section to take remaining space */
            }

                .header .invoice-info div {
                    font-size: 0.9rem;
                    color: #777;
                }

            .company-details, .client-details {
            margin-bottom: 2rem;
            }

            .company-details h2, .client-details h2 {
                font-size: 1.2rem;
                color: #2c3e50;
                margin-bottom: 0.5rem;
            }

            .company-details p, .client-details p {
                margin: 0.2rem 0;
                color: #555;
            }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }

            .items-table th, .items-table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: left;
            }

            .items-table th {
                background-color: #f5f5f5;
                font-weight: bold;
                color: #2c3e50;
            }

            .items-table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .items-table tr:hover {
                background-color: #f1f1f1;
            }

        .totals {
            text-align: right;
            margin-top: 1rem;
        }

            .totals p {
                font-size: 1rem;
                margin: 0.5rem 0;
                color: #555;
            }

                .totals p strong {
                    color: #2c3e50;
                }

        .footer {
            margin-top: 2rem;
            border-top: 2px solid #eee;
            padding-top: 1rem;
            text-align: center;
            color: #777;
            font-size: 0.9rem;
        }

            .footer p {
                margin: 0.2rem 0;
            }
    </style>
</head>
<body>
    <div class="invoice">
        <!-- Header Section -->
        <div class="header">
            <div class="logo-container">
                @if (Model.CompanyLogo!.Length != 0)
                {
                     @* Convert the byte array to Base64 string *@
                      string base64String = Convert.ToBase64String(Model.CompanyLogo);
                     <img src="data:image/png;base64,@base64String" alt="Company Logo" />
                }
            </div>
            <div class="invoice-info">
                <h1>INVOICE #@Model.InvoiceNo</h1>
                <div>Date: @Model.IssueDate.ToShortDateString()</div>
                <div>Due Date: @Model.DueDate.ToShortDateString()</div>
            </div>
        </div>

        <!-- Company and Client Details -->
        <div class="company-details">
            <h2>@Model.CompanyName</h2>
            <p>@Model.CompanyAddress</p>
            <p>Email: @Model.CompanyEmail</p>
            <p>Phone: @Model.CompanyPhone</p>
        </div>

        <div class="client-details">
            <h2>Bill To:</h2>
            <p>@Model.ClientDto?.Name</p>
            <p>@Model.ClientDto?.Address</p>
            <p>Email: @Model.ClientDto?.Email</p>
            <p>Phone: @Model.ClientDto?.Phone</p>
        </div>

        <!-- Items Table -->
        <table class="items-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ItemsDto)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@((item.Quantity * item.Price).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Totals Section -->
        <div class="totals">
            <p><strong>Subtotal:</strong> @Model.Subtotal.ToString("C")</p>
            <p><strong>Tax (@Model.TaxRate%):</strong> @Model.Tax.ToString("C")</p>
            <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
        </div>

        <!-- Footer Section -->
        <div class="footer">
            <p>Thank you for your business!</p>
            <p>@Model.CompanyName</p>
            <p>@Model.CompanyAddress</p>
            <p>@Model.CompanyEmail | @Model.CompanyPhone</p>
        </div>
    </div>
</body>
</html>